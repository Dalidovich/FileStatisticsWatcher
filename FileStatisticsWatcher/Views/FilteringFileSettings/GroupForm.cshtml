@using FileStatisticsWatcher.Services.FilteringServices;
@model string
<div>
    <p>Group</p>
    <form method="post" asp-action="UpdateGroupSettings" asp-controller="FilteringFileSettings">
        <div>
            <label>Field name:</label>
            <select name="fieldName" required>
                @foreach (var item in FilteringFileService.groupAvailableParams)
                {
                    <option value="@item">@item</option>
                }
            </select>
        </div>
        <button name="add" value="true" type="submit">Add</button>
        <button name="add" value="false" type="submit">Remove</button>
    </form>
</div>