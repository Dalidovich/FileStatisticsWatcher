@using FileStatisticsWatcher.Models.DTO;
@using FileStatisticsWatcher.Services.FilteringServices.Interfaces;
@inject IFilteringService<DirectorySettings> filS
<table>
    <thead>
        <tr class="text-center">
            <th>FieldName</th>
            <th>Not Flag</th>
            <th>State</th>
            <th>Target value</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < filS.WhereSettings.Count; i++)
        {
            <tr>
                <td>@filS.WhereSettings[i].FieldName</td>
                <td>@filS.WhereSettings[i].NotFlag</td>
                <td>@filS.WhereSettings[i].State</td>
                <td>@filS.WhereSettings[i].TargetValue</td>
            </tr>
        }
    </tbody>
</table>